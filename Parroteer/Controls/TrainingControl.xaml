<UserControl x:Class="Parroteer.Controls.TrainingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Parroteer.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="3"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="3"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Button Content="Download training pack" Command="{Binding DownloadTrainingPackCommand}"/>
        <ProgressBar Value="{Binding DownloadProgress}" Minimum="0" Maximum="1" Grid.Row="2" Grid.ColumnSpan="2"/>
        <TextBlock Text="{Binding DownloadProgressStatus}" Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
